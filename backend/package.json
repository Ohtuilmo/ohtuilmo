{
  "name": "ohtuilmo-backend",
  "version": "1.0.0",
  "description": "Node.js backend",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "build": "npm run tsc",
    "watch": "cross-env NODE_ENV=development nodemon index.ts",
    "watch:test": "cross-env NODE_ENV=test nodemon index.ts",
    "start": "cross-env NODE_ENV=production node index.ts",
    "test": "jest --runInBand",
    "test:local": "DATABASE_URL=postgres://postgres:postgres@localhost:6543/test_postgres SECRET=testsecret EMAIL_ENABLED=false NODE_ENV=test npm run test",
    "test-setup": "docker compose -f ../compose.local-test.yaml --profile local-api up -d --force-recreate",
    "test-setup:down": "docker compose -f ../compose.local-test.yaml --profile local-api down",
    "test:docker": "docker compose -f ../compose.local-test.yaml down && docker compose -f ../compose.local-test.yaml  --profile api up --exit-code-from api-test",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "db:create": "sequelize db:create",
    "db:drop": "sequelize db:drop",
    "db:migrate": "sequelize db:migrate",
    "db:seed:all": "sequelize db:seed:all",
    "db:nuke": "npm run db:drop && npm run db:create",
    "db:recreate": "npm run db:nuke && npm run db:migrate && npm run db:seed:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ohtuprojekti-ilmo/ohtuilmo-backend.git"
  },
  "keywords": [
    "node"
  ],
  "author": "jexniemi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ohtuprojekti-ilmo/ohtuilmo-backend/issues"
  },
  "homepage": "https://github.com/ohtuprojekti-ilmo/ohtuilmo-backend#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^5.0.1",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.4.0",
    "nodemailer": "^6.4.17",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "randomstring": "^1.1.5",
    "sequelize": "^5.21.2",
    "sequelize-cli": "^5.4.0",
    "shuffle-array": "^1.0.1",
    "unfuck-utf8-headers-middleware": "^1.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "cross-env": "^5.2.0",
    "eslint": "^5.14.1",
    "husky": "^1.2.0",
    "jest": "^30.2.0",
    "nodemon": "^1.18.7",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "engines": {
    "node": "20"
  }
}
