{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "module": "nodenext",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noEmitOnError": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [ "./**/*.js", "./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*"
  ]
}
